<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :author_id %>
    <%= select_tag :author_id, 
      options_from_collection_for_select(Author.all, 'id', 'name'),   
      multiple: true %>  
  </div>

  <div>
    <%= label_tag :release_date %>
    <%= text_field_tag :release_date %>
  </div>

  <div>
    <%= label_tag :base_price %>
    <%= text_field_tag :base_price %>
  </div>

  <div>
    <%= label_tag :format_id %>
    <%= select_tag :format_id, 
      options_from_collection_for_select(Format.all, 'id', 'name'), 
      include_blank: 'Select format...' %>  
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
