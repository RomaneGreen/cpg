<h1>Hardcover books published in 2018</h1>
<hr />
<% if @books.present? %>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Release Date</th>
  </tr>
</thead>
<tbody>  
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.release_date.strftime("%B %e, %Y") %></td>
    </tr>
  <% end %>
</tbody>  
</table>
<% end %>

<%= link_to 'Return to book list', books_path, class: "button success" %>
